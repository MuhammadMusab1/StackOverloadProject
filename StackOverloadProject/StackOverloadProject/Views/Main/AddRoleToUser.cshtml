<form method="post" asp-action="AddRoleToUser" style="display:flex;">
    <div style="margin-right: 2rem;">
      <h2>Select User</h2>
      <select asp-items="@ViewBag.usersList" name="userId"></select>
    </div>
    <div>
      <h2>Select Role</h2>
      <select asp-items="@ViewBag.rolesList" name="roleForUser"></select>
    </div>
    <button type="submit" style="margin-left: 2rem;">
        Add Role
    </button>
</form>
